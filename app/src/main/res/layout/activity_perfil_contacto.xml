<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:gravity="center"
    tools:context="com.example.deryancruz.contactosnginx.PerfilContacto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/foto_perfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_person_black_24dp"/>

        <TextView
            android:id="@+id/nombre_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="28sp"
            android:text="Nombre Contacto"
            />

        <TextView
            android:id="@+id/numero_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="NÃºmero Contacto"
            />

        <TextView
            android:id="@+id/correo_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Correo Contacto"
            />

        <LinearLayout
            android:id="@+id/call_and_share"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/llamar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_call_black_24dp"
                />
            <ImageView
                android:id="@+id/compartir"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_share_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>